{
    "env": {
        "mocha": true,
        "jest": true,
        "browser":true,
        "node": true
      },
    "extends": ["airbnb", "prettier"],
    "plugins": ["prettier"],
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true,
        "modules": true
      }
    },
    "rules": {
        "prettier/prettier": ["error"],
          "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }]
      },
    "settings": {
        "react" : {
            "pragma": "React",
            "version": "16.8"
        }
    }
    
  }